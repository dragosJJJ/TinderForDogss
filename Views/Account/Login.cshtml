@model TinderForDogs.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2 class="text-center">Login to TinDog</h2>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email address</label>
            <input asp-for="Email" class="form-control" type="email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-dark w-100">Login</button>
        <p class="text-center mt-3">Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up</a></p>
    </form>
</div>
